<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body{
            background-color: darkgrey;
        }
            #landing {
                background-image: url("https://www.glamour.pl/media/cache/default_view/uploads/media/default/0004/48/mcdonald-s-zmienia-kultowe-produkty.jpeg");
                height: 100vh;
                width: 100%;
                background-attachment: fixed;
                background-size: cover;
                text-align: center;
                /* align-content: center; */
                font-size: 40px;
                color: var(--white);
                position: relative;
            }

            #zegar {
                /* width: 300px;
        height: 50px;
        font-size: 2em;
        display: flex;
        justify-content: center;
        align-items: center; */
                letter-spacing: 7px;
                font-size: 20px;
                margin: 0;
                position: absolute;
                top: 3%;
                transform: translate(0, -50%);
                left: 50%;
                margin-right: -50%;
                transform: translate(-50%, -50%);
            }
        #welcome {
            letter-spacing: 70px;
            margin: 0;
            position: absolute;
            top: 40%;
            transform: translate(0, -50%);
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            /* box-shadow: 3px 3px 3px white; */
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RestaurantApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Waiters", "Index", "Waiter")</li>
                    <li>@Html.ActionLink("Menu", "Index", "Menus")</li>
                    <li>@Html.ActionLink("Single menu items", "Index", "MenuItems")</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                    <li>@Html.ActionLink("Table seatings", "Index", "TableSeatings")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function odliczanie() {
            var dzisiaj = new Date();
            var godz = dzisiaj.getHours();
            if (godz < 10) {
                godz = "0" + godz;
            }
            var min = dzisiaj.getMinutes();
            if (min < 10) {
                min = "0" + min;
            }
            var sek = dzisiaj.getSeconds();
            if (sek < 10) {
                sek = "0" + sek;
            }
            document.getElementById("zegar").innerHTML = godz + ":" + min + ":" + sek;
            setTimeout("odliczanie()", 1000);
        }
    </script>
</body>
</html>
